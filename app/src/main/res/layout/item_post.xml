<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp">

    <TextView
        android:id="@+id/tvUserName"
        android:layout_width="108dp"
        android:layout_height="29dp"
        android:layout_alignLeft="@+id/uploadImage"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="14dp"
        android:text="username"
        android:textSize="16sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/ivProfileImage"
        android:layout_width="match_parent"
        android:layout_height="306dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tvUserName"
        android:layout_marginTop="6dp"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        app:srcCompat="@android:color/black" />

    <TextView
        android:id="@+id/tvBody"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView3"
        android:layout_marginTop="5dp"
        android:layout_marginStart="15dp"
        android:ellipsize="end"
        android:maxLines="2"
        android:text="Body" />

    <TextView
        android:id="@+id/tvDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/tvBody"
        android:layout_below="@+id/tvBody"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:text="Time" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="41dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/ivProfileImage" />

    <Button
        android:id="@+id/bt1"
        android:layout_width="27dp"
        android:layout_height="27dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/ivProfileImage"
        android:layout_marginStart="14dp"
        android:layout_marginTop="7dp"
        android:background="@drawable/ufi_heart" />

    <Button
        android:id="@+id/bt2"
        android:layout_width="27dp"
        android:layout_height="27dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/ivProfileImage"
        android:layout_marginStart="78dp"
        android:layout_marginTop="7dp"
        android:background="@drawable/ufi_comment" />

    <Button
        android:id="@+id/bt3"
        android:layout_width="27dp"
        android:layout_height="27dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/ivProfileImage"
        android:layout_marginTop="3dp"
        android:layout_alignTop="@+id/bt1"
        android:layout_marginStart="142dp"
        android:background="@drawable/direct" />

    <Button
        android:id="@+id/bt4"
        android:layout_width="21dp"
        android:layout_height="29dp"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/ivProfileImage"
        android:layout_marginEnd="35dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/ufi_save" />

    <ImageView
        android:id="@+id/uploadImage"
        android:layout_width="42dp"
        android:layout_height="33dp"
        android:layout_alignTop="@+id/tvUserName"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="-4dp"
        app:srcCompat="@mipmap/ic_launcher_round" />


</RelativeLayout>