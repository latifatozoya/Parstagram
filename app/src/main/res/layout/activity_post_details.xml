<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".PostDetailsActivity">

<View
    android:id="@+id/divider2"
    android:layout_width="match_parent"
    android:layout_height="4dp"
    android:layout_alignParentStart="true"
    android:layout_alignParentTop="true"
    android:layout_marginTop="59dp"
    android:background="?android:attr/listDivider"
    android:visibility="visible" />

    <TextView
        android:id="@+id/tvUserName"
        android:layout_width="103dp"
        android:layout_height="29dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="62dp"
        android:layout_marginTop="20dp"
        android:text="username"
        android:textSize="16sp"
        android:textStyle="bold" />

    <ImageView
    android:id="@+id/uploadImage"
    android:layout_width="41dp"
    android:layout_height="35dp"
    android:layout_alignBottom="@+id/tvUserName"
    android:layout_alignParentStart="true"
    android:layout_marginStart="15dp"
    app:srcCompat="@mipmap/ic_launcher_round" />

<TextView
    android:id="@+id/tvDate"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignTop="@+id/tvUserName"
    android:layout_marginLeft="120dp"
    android:layout_marginTop="2dp"
    android:layout_toEndOf="@+id/tvUserName"
    android:text="Date" />

    <ImageView
        android:id="@+id/ivProfileImage"
        android:layout_width="match_parent"
        android:layout_height="272dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/divider2"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        app:srcCompat="@android:color/black" />

    <TextView
        android:id="@+id/tvBody"
        android:layout_width="342dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView3"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="7dp"
        android:layout_alignBottom="@+id/view"
        android:layout_marginBottom="54dp"
        android:scrollbars="vertical"
        android:text="Body" />

<View
    android:id="@+id/view"
    android:layout_width="379dp"
    android:layout_height="50dp"
    android:layout_alignParentBottom="true"
    android:layout_alignParentStart="true"
    app:layout_constraintStart_toStartOf="parent"
    tools:layout_editor_absoluteY="457dp" />

<View
    android:id="@+id/divider"
    android:layout_width="match_parent"
    android:layout_height="5dp"
    android:layout_alignParentBottom="true"
    android:layout_alignParentStart="true"
    android:layout_below="@+id/tvBody"
    android:layout_marginBottom="52dp"
    android:layout_marginTop="73dp"
    android:background="?android:attr/listDivider"
    android:visibility="visible" />

<Button
    android:id="@+id/feedbtn"
    android:layout_width="30dp"
    android:layout_height="30dp"
    android:layout_alignParentBottom="true"
    android:layout_alignParentStart="true"
    android:layout_marginBottom="11dp"
    android:layout_marginStart="49dp"
    android:background="@drawable/instagram_home_outline_24" />

<Button
    android:id="@+id/picbtn"
    android:layout_width="30dp"
    android:layout_height="30dp"
    android:layout_alignTop="@+id/feedbtn"
    android:layout_centerHorizontal="true"
    android:background="@drawable/instagram_new_post_outline_24" />

<Button
    android:id="@+id/profilebtn"
    android:layout_width="30dp"
    android:layout_height="30dp"
    android:layout_alignParentEnd="true"
    android:layout_alignTop="@+id/feedbtn"
    android:layout_marginEnd="49dp"
    android:background="@drawable/instagram_user_outline_24" />

<View
    android:id="@+id/divider4"
    android:layout_width="match_parent"
    android:layout_height="4dp"
    android:layout_alignParentStart="true"
    android:layout_below="@+id/ivProfileImage"
    android:background="?android:attr/listDivider" />

    <Button
        android:id="@+id/bt1"
        android:layout_width="27dp"
        android:layout_height="27dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/ivProfileImage"
        android:layout_marginStart="14dp"
        android:layout_marginTop="7dp"
        android:background="@drawable/ufi_heart" />

    <Button
        android:id="@+id/bt2"
        android:layout_width="27dp"
        android:layout_height="27dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/ivProfileImage"
        android:layout_marginStart="78dp"
        android:layout_marginTop="7dp"
        android:background="@drawable/ufi_comment" />

    <Button
        android:id="@+id/bt3"
        android:layout_width="27dp"
        android:layout_height="26dp"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/bt1"
        android:layout_below="@+id/ivProfileImage"
        android:layout_marginStart="142dp"
        android:layout_marginTop="2dp"
        android:background="@drawable/direct" />

    <Button
        android:id="@+id/bt4"
        android:layout_width="21dp"
        android:layout_height="29dp"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/ivProfileImage"
        android:layout_marginEnd="35dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/ufi_save" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="41dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/ivProfileImage" />


</RelativeLayout>