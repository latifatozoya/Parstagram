<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PostDetailsActivity">

    <View
        android:id="@+id/divider2"
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="59dp"
        android:background="?android:attr/listDivider"
        android:visibility="visible" />

    <TextView
        android:id="@+id/tvUserName"
        android:layout_width="104dp"
        android:layout_height="29dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="19dp"
        android:layout_marginTop="22dp"
        android:textStyle="bold"
        android:text="username" />

    <TextView
        android:id="@+id/tvDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/tvUserName"
        android:layout_marginLeft="160dp"
        android:layout_marginTop="2dp"
        android:layout_toEndOf="@+id/tvUserName"
        android:text="Date" />

    <ImageView
        android:id="@+id/ivProfileImage"
        android:layout_width="match_parent"
        android:layout_height="290dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/divider2"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        app:srcCompat="@android:color/black" />

    <TextView
        android:id="@+id/tvBody"
        android:layout_width="352dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/view"
        android:layout_alignStart="@+id/tvUserName"
        android:layout_below="@+id/ivProfileImage"
        android:layout_marginTop="15dp"
        android:scrollbars="vertical"
        android:text="Body" />

    <View
        android:id="@+id/view"
        android:layout_width="379dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="457dp" />

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="52dp"
        android:layout_below="@+id/tvBody"
        android:layout_marginTop="7dp"
        android:background="?android:attr/listDivider"
        android:visibility="visible" />

    <Button
        android:id="@+id/feedbtn"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="11dp"
        android:layout_marginStart="49dp"
        android:background="@drawable/instagram_home_outline_24" />

    <Button
        android:id="@+id/picbtn"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignTop="@+id/feedbtn"
        android:layout_centerHorizontal="true"
        android:background="@drawable/instagram_new_post_outline_24" />

    <Button
        android:id="@+id/profilebtn"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/feedbtn"
        android:layout_marginEnd="49dp"
        android:background="@drawable/instagram_user_outline_24" />

    <View
        android:id="@+id/divider4"
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/ivProfileImage"
        android:background="?android:attr/listDivider" />

</RelativeLayout>